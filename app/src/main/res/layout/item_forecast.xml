<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:padding="@dimen/item_forecast_padding">

    <TextView
        android:id="@+id/item_forecast_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WED"
        android:layout_alignBaseline="@+id/item_forecast_min"
        android:layout_alignBottom="@+id/item_forecast_min"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/item_forecast_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAX:19°"
        android:layout_above="@+id/item_forecast_min"
        android:layout_alignRight="@+id/item_forecast_min"
        android:layout_alignEnd="@+id/item_forecast_min"
        android:textColor="@color/orange" />
    <TextView
        android:id="@+id/item_forecast_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIN:14°"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/orange" />

    <TextView
        android:id="@+id/item_forecast_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloudy"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/item_forecast_icon"
        android:layout_height="@dimen/item_forecast_icon"
        android:id="@+id/item_forecast_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>